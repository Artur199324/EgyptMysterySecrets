<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gyptmysterysecrets"
    tools:context=".actEMS.BBActivity">

    <TextView
        android:id="@+id/textViewst"
        android:layout_width="233dp"
        android:layout_height="79dp"
        android:background="#EA9D85"
        android:gravity="center"
        android:text="Start"
        android:textColor="#F8F5F5"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.82" />

    <TextView
        android:id="@+id/textIntE"
        android:layout_width="253dp"
        android:layout_height="86dp"
        android:background="#EA9D85"
        android:gravity="center"
        android:text="rules of the game"
        android:textColor="#F8F5F5"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewst"
        app:layout_constraintVertical_bias="0.935" />

    <TextView
        android:id="@+id/textViewrrr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="188dp"
        android:background="#EA9D85"
        android:gravity="center"
        android:text="You have 20 attempts to open the fifth column, for each open cell plus 3 attempts"
        android:textColor="#F8F5F5"
        android:textSize="25sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>